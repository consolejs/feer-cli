{
  "parser": "babel-eslint",
    "parserOptions": {
      // ECMAScript 版本
      "ecmaVersion": 6,
      "sourceType": "module", //设置为 "script" (默认) 或 "module"（如果你的代码是 ECMAScript 模块)。
      //想使用的额外的语言特性:
      "ecmaFeatures": {
          // 允许在全局作用域下使用 return 语句
          "globalReturn": true,
          // Enable global strict mode (if ecmaVersion is 5 or greater)
          "impliedStrict": true,
          // 启用 JSX
          "jsx": false,
          "modules": true
      }
  },
  "env": {
    //环境定义了预定义的全局变量。更多在官网查看
    "browser": true,
    "jquery": true,
    "node": true,
    "amd": true,
    "es6": true,
    "commonjs": true
  },
  //值为 "eslint:recommended"的extends属性，以启用一系列核心规则
  "extends": ["eslint:recommended"],
  "globals": {
    "ActiveXObject": "readonly"
  },
  "rules": {
    //关闭行末分号提示/报错
    "semi": 0,
    // 强制使用一致的反勾号、双引号或单引号
    "quotes": [2, "single", "avoid-escape"],
     // 禁止空语句块
    "no-empty": [
      "error",
      {
        "allowEmptyCatch": true
      }
    ],
    // 禁用 console
    "no-console": "off",
    // 禁止对 function 声明重新赋值
    "no-func-assign": "off",
    // 禁用不必要的转义字符
    "no-useless-escape": "off"
  }
}
